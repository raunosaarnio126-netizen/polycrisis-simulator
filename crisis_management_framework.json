        "metrics_tracked": [
          "power_grid_stability", "transportation_capacity", "water_system_integrity",
          "telecommunications_uptime", "healthcare_facility_status", "emergency_services_readiness"
        ],
        "alert_thresholds": {
          "power_outage": "affecting_more_than_10000_customers",
